{% extends 'base.html.twig' %}

{% block title "Les taches" %}

{% block body %}
<div class="container">

    <div class="d-flex justify-content-between my-2">
        <a href="{{ path('project.create') }}" class="btn btn-primary">Cr√©er un Projet</a>
    </div>

    <ul class="list-group">
        {% for project in projects %}
            <a class="list-group-item list-group-item-action" href="{{ url('project.show', {id: project.id, name: project.title}) }}"><strong>{{project.title}}</strong> (Tache : {{project.taskCount}})</a>
        {% endfor %}
    </ul>

    <div class="d-flex">
        {% if page > 1 %}
            <a href="{{path('project.index', {page: page - 1}) }}" class="btn btn-secondary">Page precedent</a>
        {% endif %}
          {% if page < maxPage %}
            <a href="{{path('project.index', {page: page + 1}) }}" class="btn btn-secondary">Page suivante</a>
        {% endif %}
    </div>
</div>
{% endblock %}
